FROM davidcaste/alpine-java-unlimited-jce:jdk8
MAINTAINER David Soff <dsoff@worth.systems>
RUN apk --update add curl
EXPOSE 8009
EXPOSE 8000
EXPOSE 8080
ENV JAVA_OPTS -Xmx300m
VOLUME /tmp

RUN sh -c 'touch /app.jar'

ADD project-setup-@version@.jar app.jar
ENTRYPOINT exec java $JAVA_OPTS -jar app.jar
HEALTHCHECK --interval=15s --timeout=8s \
  CMD curl -f --connect-timeout 5 -m 5  http://localhost:8080/project-setup/health || exit 1

